<%- include('./partials/header.ejs') %>

<div class="row">
    <div class="col-6 m-auto">
        <h1>Edit form for <%= job.name %></h1>
        <form action="/jobs/<%= job._id %>?_method=PATCH" method="post">
            <div class="mb-3">
                <label for="name" class="form-label">Company Name</label>
                <input value="<%= job.name %>" type="text" class="form-control" id="name" name="name">
            </div>
            <div class="mb-3">
                <label for="address" class="form-label">Company Location</label>
                <input value="<%=job.address%>" type="text" class="form-control" id="address" name="address">
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Company Logo</label>
                <input value="<%= job.image %>" type="text" class="form-control" id="image" name="image">
            </div>
            <div>
                <input class="btn btn-primary" type="submit" value="Edit job">
            </div>
        </form>
    </div>
</div>

<%- include('./partials/footer.ejs') %>